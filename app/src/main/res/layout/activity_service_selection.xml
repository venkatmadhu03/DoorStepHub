<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/serviceselection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/logo_container">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@mipmap/ic_launcher_round"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/services"
        android:orientation="vertical"
        android:layout_below="@id/logo_container">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_required_for"
            android:textAlignment="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/services_text"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/services_radiogroup"
            android:orientation="horizontal"
            android:textColor="#000000"
            android:layout_below="@id/services_text"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/textviewpadding_bottom"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desktop"
                android:layout_marginRight="30dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servicetype_container"
        android:layout_below="@id/services"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/servicestype_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/which_service_type_required"
            android:textAlignment="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_below="@id/servicestype_text"
            android:id="@+id/serviceselection_list">
        </androidx.recyclerview.widget.RecyclerView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:id="@+id/button_continue"
            android:text="Continue"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_below="@id/serviceselection_list"
            android:layout_marginTop="5dp"
            android:onClick="serviceselection"
            android:background="@drawable/serviceselection_button_bg"/>
    </LinearLayout>

</RelativeLayout>