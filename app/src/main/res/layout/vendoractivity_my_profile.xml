<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.vendor.VendorMyProfileActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/Profilephoto"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"/>
        -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myprofile_title"
                android:text="Profile"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textStyle="bold"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_fullname"
                android:hint="FullName"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_emailId"
                android:hint="Email_ID"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:layout_marginTop="3dp"
                android:background="@drawable/edittext_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittet_alternatenumber"
                android:hint="Alternate Number"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:layout_marginTop="3dp"
                android:background="@drawable/edittext_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:clickable="false"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editext_description"
                android:lines="8"
                android:maxLines="10"
                android:hint="Describe Yourself In Few Words..."
                android:layout_margin="8dp"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:textSize="14sp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editext_address"
                android:lines="8"
                android:maxLines="10"
                android:hint="Address:"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:textSize="14sp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profilepic"
                        android:text="Profile Pic:"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vendor_upload_image"
                            android:onClick="profilepicuploadbutton"/>
                        <!-- <ImageView
                             android:id="@+id/question3"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:layout_marginStart="8dp"
                             android:layout_marginEnd="40dp"
                             android:background="@drawable/question"
                             android:layout_gravity="center"
                             android:onClick="getidproof"/>-->
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profilepic_filename"
                        android:text="image1.png"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address_proof_text"
                        android:text="Address Proof:"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vendor_upload_image"
                            android:onClick="uploadbutton"/>
                        <ImageView
                            android:id="@+id/question1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/vendorquestion"
                            android:layout_gravity="center"
                            android:onClick="getidproof"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addressprooffilename"
                        android:text="image2.png"
                        android:textStyle="bold"/>
                </LinearLayout>
                <!-- <ImageView
                     android:id="@+id/iageviewid_proof"
                     android:layout_width="0dp"
                     android:layout_height="100dp"
                     android:layout_weight="1"
                     android:layout_marginStart="8dp"
                     android:layout_marginEnd="40dp"
                     android:background="@drawable/question"
                     android:layout_gravity="center"
                     android:onClick="getidproof"/>-->
                <!-- <ImageView
                     android:layout_width="0dp"
                     android:layout_height="100dp"
                     android:layout_weight="1"
                     android:onClick="getAddressproof"
                     android:id="@+id/imageview_address_proof"
                     android:layout_marginStart="40dp"
                     android:layout_marginEnd="8dp"
                     android:background="@drawable/question"
                     android:layout_gravity="center"/>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/idproof"
                        android:text="Identity Proof:"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vendor_upload_image"
                            android:onClick="uploadbutton"/>
                        <ImageView
                            android:id="@+id/question2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="40dp"
                            android:background="@drawable/vendorquestion"
                            android:layout_gravity="center"
                            android:onClick="getidproof"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/idprooffile_name"
                        android:text="image3.png"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_services_spinner"
                android:hint="Services"
                android:drawableEnd="@drawable/spinner_arrow_vendor"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="servicespinner"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_locations_spinner"
                android:hint="Locations"
                android:onClick="locationsspinner"
                android:drawableEnd="@drawable/spinner_arrow_vendor"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/update_button"
                android:text="Update Profile"
                android:textColor="@color/colorWhite"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background"/>
        </LinearLayout>
</RelativeLayout>
    </androidx.core.widget.NestedScrollView>