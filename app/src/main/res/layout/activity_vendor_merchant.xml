<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Vendor_MerchantActivity"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/loginas_RL">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loginAsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="LOGIN AS:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/vendor_btn"
        android:text="Vendor"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:onClick="vendor_app"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@color/colorWhite"
        style="@style/Widget.AppCompat.ActionButton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/customer_btn"
        android:layout_below="@id/vendor_btn"
        android:text="Customer"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:onClick="merchant_app"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@color/colorWhite"
        />
</RelativeLayout>