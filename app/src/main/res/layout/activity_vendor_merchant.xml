<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Vendor_MerchantActivity"
    android:background="@color/vendor_merchant_background"
    android:id="@+id/loginas_RL">

    <!--<androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loginAsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="LOGIN AS:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />-->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logoIV"
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/vendor_btn"
        android:layout_below="@id/logoIV"
        android:text="Vendor"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:onClick="vendor_app"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ven_mer_login_button_background"
        style="@style/Widget.AppCompat.ActionButton"
        android:drawableEnd="@drawable/login_uncheck"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/customer_btn"
        android:layout_below="@id/vendor_btn"
        android:text="Customer"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:onClick="customer_app"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/ven_mer_login_button_background"
        android:drawableEnd="@drawable/login_uncheck"
        />
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_submitbtn"
        android:layout_below="@id/customer_btn"
        android:layout_centerHorizontal="true"
        android:text="submit"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/loginas_buttons_bakground"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        android:visibility="gone"
        />

</RelativeLayout>