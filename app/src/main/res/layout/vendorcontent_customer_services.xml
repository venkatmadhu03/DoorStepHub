    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_heading"
        android:text="LATEST COMPLETED WORK STREAK"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/SliderDots"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workdetailscard"
        android:layout_below="@+id/details_heading"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_mainheading"
                android:text="Completed"
                android:paddingStart="5dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_subheading"
                android:text="Novenber 2018"
                android:layout_below="@id/card_mainheading"
                android:paddingStart="5dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workprogress"
                android:text="6/8 Project"
                android:layout_below="@id/card_subheading"
                android:paddingStart="5dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
