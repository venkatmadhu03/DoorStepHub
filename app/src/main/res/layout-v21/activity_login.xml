<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_container"
            android:layout_centerInParent="true"
            android:background="@drawable/dsh1">
            <ImageView
                android:id="@+id/doorstephublogo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:elevation="10dp"
                android:src="@drawable/dshlogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardview"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
           app:cardBackgroundColor="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:id="@+id/innerbackgroundRelativeLayout"
                android:background="@drawable/dsh2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="145dp">

                <EditText
                    android:id="@+id/mobilenumber_edittext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/login_edittexts_background"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableTint="#132A9E"
                    android:hint="Mobile Number"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColorHint="#132A9E"
                    android:fontFamily="cursive"/>

                <EditText
                    android:id="@+id/otp_edittext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobilenumber_edittext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edittexts_background"
                    android:drawableStart="@drawable/otp_lock"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableTint="#9B2863"
                    android:hint="Enter OTP Number"
                    android:imeOptions="actionDone"
                    android:maxLength="4"
                    android:inputType="number"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColorHint="#9B2863"
                    android:fontFamily="cursive" />

                <RadioButton
                    android:id="@+id/remember_me_RB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/otp_edittext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Remember Me?"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:theme="@style/CheckBoxTheme" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remember_me_RB"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/login_edittexts_background"
                    android:onClick="loginsuccessfull"
                    android:text="LOG IN"
                    android:textColor="#132A9E"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUpTv"
                    android:layout_below="@id/cardview"
                    android:text="@string/dont_have_account"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold|italic"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
            </RelativeLayout>

        </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>